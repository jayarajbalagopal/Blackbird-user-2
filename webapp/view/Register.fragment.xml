<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="bbuserBlackbird_user_v1.controller.Home">
	<Dialog showHeader="false">
		<VBox class="sapUiSmallMargin">
			<f:SimpleForm id="SimpleFormToolbar1" editable="true" layout="ResponsiveGridLayout">
				<l:VerticalLayout class="sapUiContentPadding" width="75%">
					<l:content></l:content>
					<l:content>
						<Label text="Name"/>
						<Input type="Text" placeholder="" id="user_name"/>
					</l:content>
					<l:content>
						<Label text="Email Address"/>
						<Input type="Email" placeholder="" id="email"/>
					</l:content>
					<l:content>
						<Label text="Password"/>
						<Input type="Password" placeholder="" id="password"/>
					</l:content>
					<l:content>
						<Label text="Confirm Password"/>
						<Input type="Password" placeholder="" id="ee"/>
					</l:content>
					<l:content>
						<Label text="Domain"/>
						<Select change="onPress" forceSelection="false" width="100%">
							<core:Item key="" text="Energy" id="e"/>
							<core:Item key="" text="Telecommunication" id="t"/>
							<core:Item key="" text="Zipcode based information" id="z"/>
							<core:Item key="" text="Moblie" id="m"/>
						</Select>
					</l:content>
					<HBox>
						<Button text="Register" type="Accept" press="onClose"/>
						<Button text="cancel" press="onCancel"/>
					</HBox>
				</l:VerticalLayout>
			</f:SimpleForm>
		</VBox>
	</Dialog>
</core:FragmentDefinition>