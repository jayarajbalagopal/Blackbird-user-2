<mvc:View controllerName="bbuserBlackbird_user_v1.controller.Home" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:l="sap.ui.layout">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<tnt:ToolHeader class="Header_Bar">
						<Image src="/webapp/image/blackbird_logo.png"/>
						<ToolbarSpacer/>
						<Button text="Signup" press="onSignup" class="Header_Text Header_Button"/>
						<Button text="Login" press="onLogin" class="Header_Text Header_Button"/>
					</tnt:ToolHeader>
					<Image src="/webapp/image/Home-page-background.jpg" width="100%" height="90%"/>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>