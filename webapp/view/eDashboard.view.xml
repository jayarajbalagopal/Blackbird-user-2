<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:tnt="sap.tnt">
	<l:DynamicSideContent class="Main_Content">
		<l:mainContent>
			<Image src="view/energy2.jpg" class="Dashboard_Image"/>
		</l:mainContent>
		<l:sideContent >
				<List headerText="News" items="{/data}" growing="true" growingScrollToLoad="true" growingThreshold="4">
					<FeedListItem sender="{author}" text="{title}" timestamp="{publishedAt}"/>
				</List>
		</l:sideContent>
	</l:DynamicSideContent>
</mvc:View>